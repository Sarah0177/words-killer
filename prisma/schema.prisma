generator client {
  provider = "prisma-client"
  output   = "./generated"
}

datasource db {
  provider = "postgresql"
}

model Words {
  id          Int     @id @default(autoincrement())
  content     String @unique
  isKilled    Boolean @default(false)
  addAt       DateTime @default(now())
  lastKillAt  DateTime?
  killTimes   Int? @default(0)
  degree      String? @default("easy")
  needKillTimes Int? @default(4)
}
